<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EasyPayTest" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/blue</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <!--        <item name="android:windowLightStatusBar">true</item>-->
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/main_background_color</item>
        <!-- required to contrast the dark buttons -->
        <item name="android:navigationBarColor">@color/main_background_color</item>
        <item name="dialogCornerRadius">15dp</item>
    </style>
    <style name="editTextStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@drawable/edittext_text_selector</item>
        <item name="color">@drawable/edittext_text_selector</item>
        <item name="boxBackgroundColor">@drawable/box_background_selector</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColorHint">@drawable/edittext_text_selector</item>
        <item name="errorIconDrawable">@null</item>
    </style>
    <style name="activeButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/activeButtonThemeOverlay</item>
    </style>
    <style name="activeButtonThemeOverlay">
        <item name="colorPrimary">@color/blue</item>
    </style>
    <style name="DialogCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
    <style name="MaterialAlertDialog_rounded" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">@style/DialogCorners</item>
    </style>
    <style name="TextTitleActionBarStyle">
        <item name="android:textSize">24dp</item>
        <item name="android:textColor">@color/grey_nav_icon</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>